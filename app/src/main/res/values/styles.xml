<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="text_regular" parent="android:Widget.TextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">12dp</item>
        <item name="android:gravity">left|center</item>
        <item name="android:textColor">@color/user_name_color</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="ping_text_regular" parent="android:Widget.TextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">15dp</item>
        <item name="android:gravity">left|center</item>
        <item name="android:textColor">@color/user_name_color</item>
        <item name="android:fontFamily">@font/pingfang_regular</item>
    </style>

    <style name="text_medium" parent="android:Widget.TextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">@color/user_name_color</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="error_title" parent="android:Widget.TextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/error_title_color</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="error_description" parent="android:Widget.TextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">@color/error_description_color</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

</resources>
